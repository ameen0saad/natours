extend base 
include _reviewCard

block content 
    section
        .reviews
            each review in myReview
                .reviews__card.mr__review__card
                    .reviews__avatar
                        img.reviews__avatar-img(src=`${review.user.photo.startsWith('http')? user.photo : `/img/users/${review.user.photo}` }`, alt=`${review.user.name}`)
                        h6.reviews__user=  review.user.name
                    p.reviews__tour
                        a.reviews__user(href=`/tour/${review.tour.slug}`)=  review.tour.name 
                    p.reviews__text=review.review 
                    .reviews__rating
                        each star in [1,2,3,4,5]
                            svg.reviews__star(class=`reviews__star--${review.rating>=star ? 'active' : 'inactive'}`)
                                use(xlink:href='/img/icons.svg#icon-star')
                    button.btn.btn--green.span-all-rows.btn__review.btn__delete-rivew#delete-rivew(data-review-id=`${review.id}`) Delete 