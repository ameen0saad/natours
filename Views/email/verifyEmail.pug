//- verify-email.pug converted from HTML
//- Variables expected:
//-   firstName, url, YEAR

doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title Verify Your Email Address
        style.
            body, table, td, a { -webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; }
            table, td { mso-table-lspace: 0pt; mso-table-rspace: 0pt; border-collapse: collapse; }
            img { -ms-interpolation-mode: bicubic; border: 0; height: auto; line-height: 100%; outline: none; text-decoration: none; }
            body { font-family: Arial, Helvetica, sans-serif; margin: 0; padding: 0; background-color: #f5f7fa; color: #333; }
            .container { max-width: 600px; margin: 0 auto; background: #fff; border-radius: 10px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.1); }
            .header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 30px 20px; text-align: center; color: #fff; }
            .header h1 { margin: 0; font-size: 28px; font-weight: bold; }
            .verification-icon { font-size: 48px; margin-bottom: 15px; }
            .content { padding: 30px; }
            .welcome-text { font-size: 16px; line-height: 1.6; margin-bottom: 20px; }
            .verification-url { background: #f8fafc; border: 2px dashed #cbd5e0; padding: 20px; text-align: center; margin: 25px 0; border-radius: 8px; word-break: break-all; }
            .url { font-size: 14px; color: #2d3748; margin: 10px 0; font-family: 'Courier New', monospace; }
            .cta-button { display: inline-block; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: #fff; text-decoration: none; padding: 12px 30px; border-radius: 5px; font-weight: bold; margin: 20px 0; text-align: center; font-size: 16px; }
            .info-box { background: #f0f4ff; padding: 15px; border-left: 4px solid #667eea; margin: 20px 0; border-radius: 0 4px 4px 0; }
            .footer { background: #2d3748; padding: 25px 20px; text-align: center; font-size: 14px; color: #cbd5e0; }
            .unsubscribe { font-size: 12px; margin-top: 15px; color: #a0aec0; }
            .instructions { background: #fffaf0; border-left: 4px solid #ed8936; padding: 15px; margin: 20px 0; border-radius: 0 4px 4px 0; }
            .instructions h3 { margin-top: 0; color: #dd6b20; }
            .timer { color: #e53e3e; font-weight: bold; }
            .alternative-text { font-size: 14px; color: #718096; margin-top: 10px; }
    body
        center
            table(border='0', cellpadding='0', cellspacing='0', width='100%', style='max-width:600px')
                tr
                    td(align='center', bgcolor='#f5f7fa', style='padding:20px')
                        table(border='0', cellpadding='0', cellspacing='0', width='100%', class='container')
                            tr
                                td(align='center', class='header')
                                    .verification-icon ✓
                                    h1 Verify Your Email Address
                                    p(style='margin:10px 0 0 0; opacity:0.9') Natours App

                            tr
                                td(class='content')
                                    p.welcome-text Hello 
                                        strong #{firstName},
                                    p.welcome-text Thank you for signing up for our Natours App! To complete your registration and start organizing your tasks, please verify your email address by clicking the button below.

                                    div(style='text-align:center')
                                        a.cta-button(href=url) Verify Email Address

                                    p.alternative-text Or copy and paste this URL into your browser:

                                    .verification-url
                                        .url #{url}
                                        p(style='margin:10px 0 0 0; font-size:14px; color:#718096') This link will expire in 
                                            span.timer 24 hours

                                    .instructions
                                        h3 How to verify your email:
                                        ol(style='margin:10px 0; padding-left:20px')
                                            li Click the "Verify Email Address" button above
                                            li Or copy the URL above and paste it into your browser
                                            li You'll be redirected to a confirmation page
                                            li Your email will be verified automatically

                                    .info-box
                                        strong Important:
                                        |  If you didn't create an account with our Natours App, please ignore this email. Your email address will not be added to our mailing list.

                                    p.welcome-text If you're having trouble with the verification process, please reply to this email and our support team will assist you.

                                    p.welcome-text
                                        | Happy organizing!
                                        br
                                        strong The Natours Team

                            tr
                                td.footer
                                    p= `Natours App © ${new Date().getFullYear()}. All rights reserved.`
                                    p.unsubscribe This is an automated message. Please do not reply to this email.
